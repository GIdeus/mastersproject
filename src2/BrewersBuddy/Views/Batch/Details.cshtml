@model BrewersBuddy.Models.Batch

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Batch</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Type)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Type)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.StartDate)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.StartDate)
    </div>
    <div class="display-label">
            @Html.DisplayNameFor(model => model.Description)
     </div>
    <div class="display-field-field">
        @Html.DisplayFor(model => model.Description)
    </div>

</fieldset>

<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.BatchId }) |
    @Html.ActionLink("Add Note", "AddNote", new { id=Model.BatchId }) |
    @Html.ActionLink("Rate", "Create", "BatchRating", new { Model.BatchId }, null) | 
    @Html.ActionLink("Back to List", "Index")
</p>

<h2>Notes</h2>

@foreach (var note in Model.Notes) {
    <p>
            @Html.ActionLink("View", "Edit", new { id=Model.BatchId })  |
            @Html.ActionLink("Edit", "Edit", new { id=Model.BatchId })  |
            @Html.ActionLink("Delete", "DeleteNote", new { id=note.NoteId })  |
            <b>@Html.DisplayFor(modelItem => note.Title)</b>
    </p>
    <p>
            @Html.DisplayFor(modelItem => note.Text)
    </p>
}
